<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_small"
    android:paddingRight="@dimen/margin_big"
    android:paddingLeft="@dimen/margin_40"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/chat_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/chat_time_margin"
        android:textColor="@color/textColor_dark"
        android:layout_gravity="right" />
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_3" >
	    <FrameLayout
	        android:id="@+id/avatar_ll"
	        android:layout_width="@dimen/chat_avatar"
	        android:layout_height="@dimen/chat_avatar"
	        android:layout_alignParentRight="true" >
	        <ImageView
	            android:id="@+id/chat_user_avatar_right"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/user_icon"
	            android:scaleType="fitXY" />
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/send_gift_icon_bg"
	            android:scaleType="fitXY" />
	    </FrameLayout>
	    
	    <TextView 
	        android:id="@+id/chat_content_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_toLeftOf="@id/avatar_ll"
	        android:background="@drawable/chat_pop_right"
	        android:layout_marginRight="@dimen/margin_big"
	        android:textColor="@color/title_color"
	        android:textSize="@dimen/title_size" />
	</RelativeLayout>
</LinearLayout>
