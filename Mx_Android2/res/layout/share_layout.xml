<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/share_popwindow_bg"
	    android:gravity="center_vertical"
	    android:paddingTop="@dimen/share_margin"
	    android:paddingBottom="@dimen/share_margin"
	    android:paddingLeft="@dimen/margin_bigger"
	    android:paddingRight="@dimen/margin_bigger" >
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center" >
		    <TextView
		        android:id="@+id/sina_weibo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:clickable="true"
		        android:textColor="@color/share_textColor"
		        android:gravity="center_horizontal"
		        android:drawableTop="@drawable/sina_weibo"
		        android:drawablePadding="@dimen/margin_small" />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center" >
		    <TextView
		        android:id="@+id/weixin"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/share_textColor"
		        android:onClick="onClick"
		        android:clickable="true"
		        android:gravity="center_horizontal"
		        android:drawableTop="@drawable/weixin"
		        android:drawablePadding="@dimen/margin_small" />
		</LinearLayout>
		
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center" >
		    <TextView
		        android:id="@+id/weixin_friend"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/share_textColor"
		        android:onClick="onClick"
		        android:clickable="true"
		        android:gravity="center_horizontal"
		        android:drawableTop="@drawable/weixin_friend"
		        android:drawablePadding="@dimen/margin_small" />
		</LinearLayout>    
		    
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center" >
		    <TextView
		        android:id="@+id/qq_friend"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onClick"
		        android:clickable="true"
		        android:textColor="@color/share_textColor"
		        android:gravity="center_horizontal"
		        android:drawableTop="@drawable/qq"
		        android:drawablePadding="@dimen/margin_small" />
		</LinearLayout>    
    </LinearLayout>
    
    <TextView 
        android:id="@+id/pop_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_big"
        android:paddingBottom="@dimen/margin_big"
        android:text="@string/cancel"
        android:onClick="onClick"
        android:clickable="true"
        android:textSize="@dimen/title_size"
        android:textColor="@color/share_textColor"
        android:background="@color/ad_bg"
        android:gravity="center" />
</LinearLayout>
