<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_24"
    android:paddingRight="@dimen/margin_24"
    android:paddingTop="@dimen/margin_20"
    android:paddingBottom="@dimen/margin_20" >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true" >
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
			<TextView 
			    android:id="@+id/gift_type"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/title_size"
			    android:textColor="@color/title_color" />
			<TextView 
			    android:id="@+id/gift_nickname"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/margin_normal"
			    android:layout_marginRight="@dimen/margin_normal"
			    android:textSize="@dimen/title_size"
			    android:textColor="@color/leftmenu_bottom_bg_color" />
			<TextView 
			    android:id="@+id/gift_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/textSize_normal"
			    android:textColor="@color/textColor_dark" />
		</LinearLayout>	
		
	    <TextView 
	        android:id="@+id/gift_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="@color/title_color"
	        android:textSize="@dimen/title_size"
	        android:layout_marginTop="@dimen/margin_normal" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/open_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gift_detail_btn_bg"
        android:text="@string/open_gift"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
