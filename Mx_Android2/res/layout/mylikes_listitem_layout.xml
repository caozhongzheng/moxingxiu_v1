<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/mycomments_listitem_margin_left_right"
        android:layout_marginRight="@dimen/mycomments_listitem_margin_left_right"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mylikes_listitem_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mycomments_listitem_view_title_margin_top_left_rifht"
                android:layout_marginTop="@dimen/mycomments_listitem_view_title_margin_top_left_rifht"
                android:text="范冰冰：我没觉得复杂可能是你们想多了"
                android:textColor="@android:color/black"
                android:textSize="@dimen/mycomments_listitem_content_textsize" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mycomments_listitem_view_title_margin_top_left_rifht"
                android:layout_marginTop="@dimen/mycomments_listitem_view_tag_margin_top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/mylikes_listitem_view_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mycomments_news"
                    android:gravity="center"
                    android:text="新闻"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/mycomments_listitem_view_tag_textsize" />

                <TextView
                    android:id="@+id/mylikes_listitem_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mycomments_listitem_time_margin_left"
                    android:text="01-12  14:30"
                    android:textColor="@color/mycomments_listitem_time_text_color"
                    android:textSize="@dimen/mycomments_listitem_time_textsize" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dividing_line"
            android:background="@color/mycomments_listitem_view_bg_color" />
    </LinearLayout>

</LinearLayout>