<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_24"
    android:paddingTop="@dimen/margin_bigger" >
    
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="发给"
	        android:textSize="@dimen/title_size"
	        android:textColor="@color/title_color" />
	    <TextView 
	        android:id="@+id/nickname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/margin_small"
	        android:layout_marginRight="@dimen/margin_small"
	        android:textSize="@dimen/title_size"
	        android:textColor="@color/leftmenu_bottom_bg_color" />
	    <TextView 
	        android:id="@+id/time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/textSize_normal"
	        android:textColor="@color/textColor_dark"
	        android:text="12:05 1/10" />
	</LinearLayout>
	
	<TextView 
	    android:id="@+id/content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/title_size"
	    android:textColor="@color/title_color"
	    android:text="10魔币大礼包" />
</LinearLayout>
